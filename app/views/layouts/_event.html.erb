<div class="box">
  <div class="media-content">
  <span class="title is-4 media-left"><%= link_to event.title, event %></span>
  <span class = "button is-primary media-right is-pulled-right " ><%= link_to "Attend", event %></span>
  </div>
    <p><%= event.description %></p>
  <hr/>
  <div class="columns">
    <span class="column is-half">Hosted by <strong><%= event.host.name %></strong></span>
    <span class="column is-half has-text-right"><%= event.location %> -
    <small><%= event.date.to_formatted_s(:short)  %></small>
    </span></div>
</div>